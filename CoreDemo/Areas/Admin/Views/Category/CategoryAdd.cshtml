@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Ekleme</h1>
<div class="login p-3 bg-light mw-100">
    @using (Html.BeginRouteForm(routeName: "Admin", routeValues: new { action = "CategoryAdd", controller = "Category", area = "Admin" }, method: FormMethod.Post))
    
    {
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Kategori Açıklaması")
        @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
        <br />
        
        <br />
        <button class="btn btn-info">Kategori Kaydet</button>
    }
</div>

