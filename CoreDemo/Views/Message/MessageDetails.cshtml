@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detay</h1>
<div class="login p-3 bg-light mw-100">
    

        @Html.Label("Mesaj ID")
        @Html.TextBoxFor(x => x.MessageID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.Label("Mesaj Başlığı")
        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        <br />
        @Html.Label("Mesaj İçeriği")
        @Html.TextAreaFor(x => x.MessageDetails,15,3, new { @class = "form-control" })
        <br />
        
        
        <a href="/Message/Inbox" class="btn btn-info">Mesajlara Dön</a>
    
</div>

