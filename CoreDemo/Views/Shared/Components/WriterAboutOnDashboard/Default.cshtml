@using EntityLayer.Concrete
@model List<Writer>

    <div class="d-flex mt-5 align-items-top">
        <img src="@Model.FirstOrDefault().WriterImage" class="img-sm rounded-circle mr-3" alt="image">
        <div class="mb-0 flex-grow">
            <h5 class="mr-2 mb-2">@Model.FirstOrDefault().WriterName</h5>
            <p class="mb-0 font-weight-light">@Model.FirstOrDefault().WriterAbout</p>
        </div>
        <div class="ml-auto">
            <i class="mdi mdi-heart-outline text-muted"></i>
        </div>
    </div>
